; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**/*.lock]
indent_size = 2
insert_final_newline = false

[**/*.yml]
indent_size = 2
insert_final_newline = false

[**/*.yaml]
indent_size = 2
insert_final_newline = false

[**/*.yml.dist]
indent_size = 2
insert_final_newline = false

[**/*.yaml.dist]
indent_size = 2
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.gitignore]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
insert_final_newline = false

[*.json.dist]
indent_size = 2
insert_final_newline = false

[**/*.{t,j}s?]
trim_trailing_whitespace = false

[**/*.{?c,le}ss]
indent_size = 2
trim_trailing_whitespace = false
