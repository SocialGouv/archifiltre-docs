{
  "compilerOptions": {
    "lib": [
      "ES2023",
      "DOM"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "module": "node16",
    "jsx": "react",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "files": true
  },
  "include": [
    "globals.d.ts",
    "typings/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "**/*.test.*",
    "./node_modules/"
  ]
}