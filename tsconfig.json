{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "jsx": "react",
    "target": "ES2015", // TODO: >=ES2016 (Raven only working in es2015 for whatever reasons)
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "include": [
    "globals.d.ts",
    "src/**/*",
    "tests/integration/common/utils/error/error-util.test.ts",
  ],
  "exclude": [
    "tests/**/*",
    "**/*.test.*",
    "./node_modules/"
  ]
}