{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "jsx": "react",
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "include": [
    "globals.d.ts",
    "typings/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "**/*.test.*",
    "./node_modules/"
  ]
}